@{
    ViewData["Title"] = "Hello";
}

@model IEnumerable<WalmartParser.Models.ShoesDb>

<!DOCTYPE html>
 
<html>
<head>
    <title>Walmart Man Shoes</title>
</head>
<body>
    <h3>Man Shoes</h3>
    <div class="container">
        <table class="table-striped">
            <thead>
                <tr>
                    <td>Picture</td>
                    <td>Brand Name</td>
                    <td>Model Title</td>
                    <td>Price</td>
                </tr>
            </thead>
            @foreach (var shoes in @ViewBag.shoes)
            {
                <tr>
                    <td><img src="@shoes.Image" class="img-thumbnail" alt="@shoes.BrandName" /></td>
                    <td>@shoes.BrandName</td>
                    <td>@shoes.Name</td>
                    <td>@shoes.Prise</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
